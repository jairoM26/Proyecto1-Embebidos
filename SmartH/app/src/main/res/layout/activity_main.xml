<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/diagramhd"
    style="?android:attr/buttonStyleSmall"
    tools:context="com.example.david.smarth.main">


    <Button
        android:id="@+id/button_image"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="8sp"
        android:layout_alignParentBottom="true"
        android:text="Imagen" />

    <Button
        android:id="@+id/button_s"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/textView_lc2"
        android:layout_toRightOf="@+id/textView_lc2"
        android:text="Luz Sala"
        android:textSize="8sp" />

    <Button
        android:id="@+id/button_g"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="8sp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/button_s"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text="Luz Garaje" />

    <Button
        android:id="@+id/button_c1"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="8sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_toEndOf="@+id/button_s"
        android:layout_toRightOf="@+id/button_s"
        android:text="Luz Cuarto 1" />

    <Button
        android:id="@+id/button_c2"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="8sp"
        android:layout_above="@+id/button_c1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="26dp"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:text="Luz cuarto 2" />

    <Button
        android:id="@+id/button_c"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:textSize="8sp"
        android:layout_alignLeft="@+id/button_s"
        android:layout_alignStart="@+id/button_s"
        android:layout_centerVertical="true"
        android:text="Luz Cocina" />

    <TextView
        android:id="@+id/textView_ls"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_s"
        android:layout_alignBottom="@+id/button_s"
        android:layout_alignLeft="@+id/button_c2"
        android:layout_alignStart="@+id/button_c2"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView_lg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_ls"
        android:layout_alignBottom="@+id/textView_ls"
        android:layout_toLeftOf="@+id/button_g"
        android:layout_toStartOf="@+id/button_g"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView_lc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_c"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@+id/button_image"
        android:layout_toRightOf="@+id/button_image"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView_lc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_c2"
        android:layout_alignEnd="@+id/button_c1"
        android:layout_alignRight="@+id/button_c1"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView_lc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button_c"
        android:layout_alignLeft="@+id/button_c"
        android:layout_alignStart="@+id/button_c"
        android:layout_marginBottom="12dp"
        android:text="OFF" />

    <TextView
        android:id="@+id/textView_ps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button_g"
        android:layout_alignLeft="@+id/textView_ls"
        android:layout_alignStart="@+id/textView_ls"
        android:text="Cerrada" />

    <TextView
        android:id="@+id/textView_pg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button_g"
        android:layout_alignBottom="@+id/button_g"
        android:layout_alignLeft="@+id/button_c1"
        android:layout_alignStart="@+id/button_c1"
        android:text="Cerrada" />

    <TextView
        android:id="@+id/textView_pc2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView_pc1"
        android:layout_alignBottom="@+id/textView_pc1"
        android:layout_toEndOf="@+id/textView_lc"
        android:layout_toRightOf="@+id/textView_lc"
        android:text="Cerrada" />

    <TextView
        android:id="@+id/textView_pc1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView_lc1"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:layout_toLeftOf="@+id/textView_lc1"
        android:layout_toStartOf="@+id/textView_lc1"
        android:text="Cerrada" />


</RelativeLayout>
